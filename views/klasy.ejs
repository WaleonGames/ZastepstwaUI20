<%- include("partials/head", { title: title }) %>
<%- include("partials/header") %>

<div class="zu-classes">
  <main>
    <h2 class="section-title">
      <i class="bi bi-people-fill"></i> Klasy i uczniowie
    </h2>

    <div class="osoby-grid">
      <% Object.keys(klasy).forEach(klasa => { %>
        <a href="/klasy/<%= klasa %>" class="osoba-card-link">
          <div class="osoba-card">
            <h4>
              <i class="bi bi-journal-bookmark-fill"></i> Klasa <%= klasa %>
            </h4> 
            <ul class="osoba-list">
              <% klasy[klasa].forEach(uczen => { %>
                <li><i class="bi bi-person"></i> <%= uczen %></li>
              <% }) %>
            </ul>
          </div>
        </a>
      <% }) %>
    </div>
  </main>
</div>

<%- include("partials/footer", { active: active }) %>
