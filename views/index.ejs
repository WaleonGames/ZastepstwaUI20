<%- include("partials/head", { title: "Panel Ucznia" }) %>
<%- include("partials/header") %>

<style>
  body {
    background: #0d1117;
    min-height: 100vh;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    padding: 40px;
    max-width: 1600px;
    margin: 0 auto;
  }

  .card-box {
    background: #11151d;
    border: 1px solid #1f2530;
    border-radius: 16px;
    padding: 26px;
    transition: 0.2s;
  }

  .card-box:hover {
    border-color: #2d3340;
    transform: translateY(-4px);
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #58a6ff;
    margin-bottom: 12px;
  }

  .card-box p {
    color: #9ba7b4;
    margin: 0;
  }
</style>

<h2 class="text-center text-light fw-bold mt-4 mb-4">
  <i class="bi bi-mortarboard-fill text-info"></i>
  PANEL PUBLICZNEGO UCZNIA
</h2>

<div class="dashboard-grid">
  <!-- ZASTĘPSTWA -->
  <a href="/zastepstwa" class="text-decoration-none">
    <div class="card-box text-light">
      <h2 class="card-title"><i class="bi bi-calendar-week"></i> Zastępstwa</h2>
      <p>Sprawdź, kto zastępuje nieobecnych nauczycieli.</p>
    </div>
  </a>

  <!-- NAUCZYCIELE -->
  <a href="/nauczyciele" class="text-decoration-none">
    <div class="card-box text-light">
      <div class="card-title"><i class="bi bi-people-fill"></i> Nauczyciele</div>
      <p>Lista wszystkich nauczycieli i przedmiotów.</p>
    </div>
  </a>

  <!-- KLASY -->
  <a href="/klasy" class="text-decoration-none">
    <div class="card-box text-light">
      <div class="card-title"><i class="bi bi-book"></i> Klasy</div>
      <p>Zobacz skład klas i plany lekcji.</p>
    </div>
  </a>
</div>

<%- include("partials/footer") %>
